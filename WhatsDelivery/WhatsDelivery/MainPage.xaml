                   Margin="5,5,5,10"
                   FontSize="20" FontAttributes="Bold"
                   TextColor="#111111"
                   HorizontalOptions="Center"
                   VerticalOptions="CenterAndExpand" />

                <Entry x:Name="pesquisa" IsEnabled="False"
                       Visual="Material"  
                       Placeholder="Aguarde, pesquisando local..." />
                
            </StackLayout>
           

