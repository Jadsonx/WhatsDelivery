        <pancake:PancakeView BackgroundColor="White"
                     CornerRadius="40,0,0,40"
                     IsClippedToBounds="true"
                     HorizontalOptions="FillAndExpand"
                     HeightRequest="250">

            <StackLayout Margin="5,5,5,5" >
                <Image Source="whatslogo.bmp" Margin="0,0,0,0"                       
